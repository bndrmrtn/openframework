<?php

error_reporting(E_ALL ^ E_WARNING ^ E_NOTICE ^ E_DEPRECATED); 

const ROOT = __DIR__;

const FRAMEWORK = __DIR__ . DIRECTORY_SEPARATOR . 'framework';

require FRAMEWORK . '/version.php';

const DEVROOT = __DIR__ . DIRECTORY_SEPARATOR . 'framework' . DIRECTORY_SEPARATOR . 'devtools';

$app = require DEVROOT . '/app.php';

$app->initialize(
    /* command line args */
    $argv,
    
    /* load specific extension */
    [ 'env' ],

    /* load helpers from the framework */
    [ 'deletedir', 'load_dir_files' ]
);

$_config = [
    'api' => [
        'url' => 'https://open.mrtn.vip/.dev',
        'key' => 'xxxx-xxxx-xxxx',
    ],
];

$app->config($_config);

$app->handleCmd();